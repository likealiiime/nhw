<div style="position: relative; top: 3px; left: 3px; display: inline;">
	<% form_tag('/admin/customers/search', :method => :get, :style => 'display: inline;') do %>
		<%= text_field_tag 'query' -%>
		<%= select_tag 'parameter', '<option value="id">Customer ID</option><option value="first_name">First Name</option><option value="last_name">Last Name</option>"'-%>
		<%= submit_tag "Search" %>
	<% end %>
</div>